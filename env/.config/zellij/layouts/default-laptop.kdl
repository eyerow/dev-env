layout {
    tab hide_floating_panes=true {

        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        pane split_direction="vertical" {
            pane size="80%" {
            command "nvim"
            }
            pane size="20%"
        }
        floating_panes {
            pane cwd="~/src/scratchpad"{
                width "50%"
                height "50%"
            }
        }
        pane size=1 borderless=true {
            plugin location="status-bar"
        }
    }
}